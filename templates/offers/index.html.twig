{% extends 'base.html.twig' %}

{% block title %}Page d'offres
{% endblock %}

{% block body %}
	{% include '/partials/breadcrumb.html.twig'
		with {
		'breadcrumbs':[
			['offres', 'offers_index']
		],
		'content':'Liste des offres'
	}
	%}
	<div class="row justify-content-center m-0">
		<div class="col-10 col-md-6 text-white text-center">
			<h2 class="mt-2 mb-3">NOS OFFRES PRIVILÃˆGE</h2>
			<p class="font-weight-light mt-2">
