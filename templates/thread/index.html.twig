{% extends 'base.html.twig' %}

{% block title %}
	{{thread.title}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h4 text-center mb-5">Fil d'actualit√© du forum
			{{thread.title}}</h1>
		<div class="row mb-5">
			<div class="col-6 rounded bg-light p-3">
				<div class="mb-2">Postez votre message</div>
				{{form_start(form)}}
				{{form_widget(form)}}
				<button class="btn btn-primary mt-3" type="submit">Ajouter son message</button>
				{{form_end(form)}}
			</div>
			<div class="col-6">
				Messages admin
			</div>

		</div>
		<div class="row">
			<div class="col-6">
				{% set posts = thread.posts %}
				{% for post in posts %}
					{% include 'post/_affichagePost.html.twig' with {'ad' : post} %}
				{% endfor %}
			</div>

		</div>
	</div>
{% endblock %}
