{% extends 'base.html.twig' %}

{% block title %}
	{{thread.title}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h4 text-center mb-5">Fil d'actualit√© du forum
			{{thread.title}}</h1>
		<div class="row">
			<div class="col-6 mb-5">
				<div class="row mb-5">
					<div class="col-12 rounded bg-light p-3">
						<div class="mb-2">Postez votre message</div>
						{{form_start(form)}}
						{{form_row(form.content)}}
						<button class="btn btn-primary mt-3" type="submit">Ajouter son message</button>
						{{form_end(form)}}
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						{% set posts = thread.posts %}
						{% for post in posts %}
							{% if not post.isAdmin %}

								{% include 'post/_affichagePost.html.twig' with {'post' : post} %}
							{% endif %}

						{% endfor %}
					</div>

				</div>
			</div>
			<div class="col-6 mb-5">
				<h2 class="h4 text-center mb-5">Messages administrateur</h2>
				<div class="row">
					<div class="col-12">
						{% set posts = thread.posts %}
						{% for post in posts %}
							{% if post.isAdmin %}

								{% include 'post/_affichagePost.html.twig' with {'post' : post, 'thread' : thread} %}
							{% endif %}
						{% endfor %}
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}

	<script src="{{ asset('/js/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
	<script type="text/javascript">
		$(function () {
$('textarea.ckeditor').ckeditor();
});
	</script>
	<script>
		function handleAnswering(id) {
CKEDITOR.instances['post_content'].insertText('@' + $(id).data('target') + ' ');

}
	</script>

{% endblock %}
