{% extends 'admin/base.html.twig' %}

{% block title %}Admin Historique{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}
    {% set current_date = 'now'|date('F Y') %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Historique des trades</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                            <li class="breadcrumb-item active">Historique</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <nav>
                    <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" data-toggle="tab" href="#nav-trade-passe" role="tab">Trades passés</a>
                        <a class="nav-item nav-link" data-toggle="tab" href="#nav-trade-cours" role="tab">Trades en cours</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-trade-passe" role="tabpanel">
                        <br>
                        <h4>Trades passés - <small id="selectedMonth1"></small></h4>
                        <br>
                        <table width="100%" class="table table-hover table-bordered dt-responsive nowrap text-center" id="tableHistoric1" cellspacing="0">
                            <thead class="thead-dark">
                            <tr>
                                <th style="display: none">Date</th>
                                <th>Achat/Vente</th>
                                <th>Nom de la paire</th>
                                <th>Prix entrée</th>
                                <th>Prix de sortie</th>
                                <th>Résultat</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for trade in trades %}
                                <tr>
                                    <td style="display: none">{{ trade.p_createdAt|date }}</td>
                                    <td>{{ trade.p_feeling }}</td>
                                    <td>{{ trade.p_pair }}</td>
                                    <td>{{ trade.p_startPrice }}</td>
                                    <td></td>
                                    <td></td>
                                    <td><a class="btn btn-primary" target="_blank" data-toggle="tooltip" data-placement="bottom" title="Voir en détail" href="/thread/{{ trade.t_slug }}#post{{ trade.p_id }}"><i class="fas fa-search"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <br>
                        <table border="0" cellspacing="5" cellpadding="5">
                            <tbody>
                            <tr>
                                <td>Choisir un autre mois :</td>
                                <td><input class="form-control" name="startDate" id="selectedDate1"/></td>
                            </tr>
                            </tbody>
                        </table>
                        <br>
                    </div>
                    <div class="tab-pane show fade" id="nav-trade-cours" role="tabpanel">
                        <br>
                        <h4>Trades en cours - <small id="selectedMonth2"></small></h4>
                        <br>
                        <table width="100%" class="table table-hover table-bordered dt-responsive nowrap text-center" id="tableHistoric2" cellspacing="0">
                            <thead class="thead-dark">
                            <tr>
                                <th style="display: none">Date</th>
                                <th>Nom de la paire</th>
                                <th>Prix entrée</th>
                                <th>SL</th>
                                <th>TP1</th>
                                <th>TP2</th>
                                <th>Prix de sortie</th>
                                <th>Résultat</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for trade in trades %}
                                <tr>
                                    <td style="display: none">{{ trade.p_createdAt|date }}</td>
                                    <td>{{ trade.p_pair }}</td>
                                    <td>{{ trade.p_startPrice }}</td>
                                    <td>{{ trade.p_stopPrice }}</td>
                                    <td>{{ trade.p_tp1 }}</td>
                                    <td>{{ trade.p_tp2 }}</td>
                                    <td></td>
                                    <td></td>
                                    <td><a class="btn btn-primary" target="_blank" data-toggle="tooltip" data-placement="bottom" title="Voir en détail" href="/thread/{{ trade.t_slug }}#post{{ trade.p_id }}"><i class="fas fa-search"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <br>
                        <table border="0" cellspacing="5" cellpadding="5">
                            <tbody>
                            <tr>
                                <td>Choisir un autre mois :</td>
                                <td><input class="form-control" name="startDate" id="selectedDate2"/></td>
                            </tr>
                            </tbody>
                        </table>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/historic.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
{% endblock %}