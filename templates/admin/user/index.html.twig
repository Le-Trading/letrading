{% extends 'admin/base.html.twig' %}

{% block title %}Admin User{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Gestion des utilisateurs</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                        <li class="breadcrumb-item active">Utilisateurs</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date d'inscription</th>
                        <th>Nom / Prénom</th>
                        <th>Pseudo</th>
                        <th>Mail</th>
                        <th>Nombre de posts</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users|sort|reverse %}
                    <tr>
                        <td>{{ user.createdAt|date('d/m/Y') }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.posts | length }}</td>
                        <td>
                            {% if "ROLE_ADMIN" not in user.getRoles() and "ROLE_SUPER_ADMIN" not in user.getRoles() %}
                                <a data-toggle="tooltip" data-placement="left" title="Supprimer" href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            {% else %}
                                <button class="btn btn-danger" disabled>
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
