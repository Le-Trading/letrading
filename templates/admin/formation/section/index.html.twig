{% extends 'admin/base.html.twig' %}

{% block title %}Admin Formations{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Gestion de la formation <strong>{{ formation.title }}</strong></h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                            <li class="breadcrumb-item active"><a href="{{ path('admin_formation_index') }}">Formations</a></li>
                            <li class="breadcrumb-item active">Sections</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Sections de <strong>{{ formation.title }}</strong></h2>
                        <div class="card-tools">
                            <a class="ml-1 mr-1" href="{{ path('admin_formation_section_create', {'id' : formation.id}) }}"><i class="fas fa-plus-circle"></i> Ajouter une nouvelle section</a>
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Réduire">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if sections is empty %}
                            <div class="alert alert-info alert-dismissible">
                                <h5><i class="icon fas fa-info"></i> Aucune section pour cette formation</h5>
                                Créez votre première section :
                                <a href="{{ path('admin_formation_section_create', {'id' : formation.id}) }}" class="btn btn-app text-dark">
                                    <i class="fas fa-plus"></i> Ajouter
                                </a>
                            </div>
                        {% else %}
                            {% for section in sections %}
                                <div id="accordion">
                                    <div class="card card-light">
                                        <div class="card-header">
                                            <h4 class="card-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ section.id }}">
                                                    {{ section.title }}
                                                </a>
                                            </h4>
                                            <div class="card-tools">
                                                <a class="ml-1 mr-1" href="{{ path('admin_formation_section_edit', {idFormation : formation.id, idSection : section.id}) }}"><i class="fa fa-edit"></i> Éditer la section</a>
                                                <a class="ml-1 mr-1" href="{{ path('admin_formation_etape_create', {idFormation : formation.id, idSection : section.id}) }}"><i class="fas fa-plus-circle"></i> Ajouter une étape</a>
                                                <a class="ml-1 mr-1 text-danger"
                                                   href="{{ path('admin_formation_section_delete', {idFormation : formation.id, idSection : section.id}) }}"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette section ? Attention : Cela supprimera tout contenu lié à cette section')">
                                                    <i class="fas fa-trash"></i> Supprimer
                                                </a>
                                            </div>
                                        </div>
                                        <div id="collapse{{ section.id }}" class="panel-collapse collapse in">
                                            <div class="card-body">
                                                {% if etapes is empty %}
                                                    <div class="alert alert-info alert-dismissible">
                                                        <h5><i class="icon fas fa-info"></i> Aucune étape disponible</h5>
                                                        Créer la première étape :
                                                        <a href="{{ path('admin_formation_etape_create', {idFormation : formation.id, idSection : section.id}) }}" class="btn btn-app text-dark">
                                                            <i class="fas fa-plus"></i> Ajouter
                                                        </a>
                                                    </div>
                                                {% else %}
                                                    <table class="table table-striped table-hover etape-sortable-table">
                                                        <thead>
                                                            <tr>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                    {% for etape in etapes %}
                                                        {% if etape.section.id == section.id %}
                                                            <tr data-index="{{ etape.id }}" data-position="{{ etape.position }}">
                                                                <td>
                                                                    <h2 class="card-title">{{ etape.title }}</h2>
                                                                </td>
                                                                <td>
                                                                    <a class="ml-1 mr-1" href="{{ path('admin_formation_etape_edit', {idFormation : formation.id, idSection : section.id, idEtape : etape.id}) }}"><i class="fa fa-edit"></i> Éditer étape</a>
                                                                </td>
                                                                <td>
                                                                    <a class="ml-1 mr-1" href="{{ path('formation_index') }}" target="_blank"><i class="fas fa-eye"></i> Aperçu</a>
                                                                </td>
                                                                <td>
                                                                    <a class="ml-1 mr-1 text-danger"
                                                                       href="{{ path('admin_formation_etape_delete', {idFormation : formation.id, idSection : section.id, idEtape : etape.id}) }}"
                                                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette étape ? Attention : Cela supprimera tout contenu lié à cette étape')">
                                                                        <i class="fas fa-trash"></i> Supprimer
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endfor %}
                                                        </tbody>
                                                    </table>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.etape-sortable-table tbody').sortable({
                update: function (event, ui) {
                    $(this).children().each(function (index) {
                        if($(this).attr('data-position') !== (index+1)){
                            $(this).attr('data-position', (index+1)).addClass('updated')
                        }
                    });
                    saveNewPositions();
                }
            });
        });

        function saveNewPositions(){
            var positions = [];
            $('.updated').each(function () {
                positions.push([$(this).attr('data-index'),$(this).attr('data-position')]);
                $(this).removeClass('updated');
            });

            $.ajax({
                url: "{{ path('admin_formation_etape_update_position') }}",
                method: "POST",
                data: {
                    update: 1,
                    positions: positions
                },
                success: function (response) {
                    console.log(response);
                }
            });
        }
    </script>
{% endblock %}
