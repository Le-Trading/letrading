{% extends 'base.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}
    {#'breadcrumbs':[
    ['contact', 'pages_contact'],
    ['user', 'user_show', {
    'pseudo' : 'gshields'
    }]
    ['forum', 'thread_post_like', 'multiple']
    ]#}
    {% include '/partials/breadcrumb.html.twig'
        with {
            'breadcrumbs':[
                ['contact', 'pages_contact']
            ],
            'content':'Formulaire de contact'
        }
    %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="py-3 px-3 d-flex justify-content-center">
                    {{form_start(form)}}
                    <div class="col-6 float-left pl-0">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-6 float-left pr-0">
                        {{ form_row(form.lastName) }}
                    </div>
                    {{form_widget(form)}}
                    <button type="submit" class="btn btn-form-custom">Envoyer </button>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
