{% extends 'base.html.twig' %}
{% block title %}
    Création d'une conversation avec {{ destinataire.pseudo }}
{% endblock %}
{% block body %}
    <div class="container">
        <h2 class="h4 my-4">Création d'une conversation avec {{ destinataire.pseudo }}</h2>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    {{ form_start(form) }}
                    {{form_row(form.content)}}
                    {{form_row(form.media)}}
                    <button class="btn btn-info" type="submit">Envoyer <i class="fa fa-paper-plane"></i></button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}

