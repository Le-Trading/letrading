{% extends 'base.html.twig' %}

{% block title %}Liste des paiements{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="h4 my-4 text-center">Liste des paiements</h2>
        {% if invoices | length > 0 %}
            <table class="table table-hover align-items-center">
                <thead class="table-secondary">
                <tr>
                    <td>Date du paiement</td>

                    <td>N° de commande</td>

                    <td>Montant</td>

                    <td>Détail</td>
                </tr>
                </thead>
                <tbody class="bg-light">
                {% for invoice in invoices %}
                    <tr>
                        <td>
                            {% if invoice.created %}
                                {{ invoice.created|date('d/m/Y') }}
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.id %}
                                {{ invoice.number }}
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.amount_due %}
                                {{ invoice.amount_due/100 }} €
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.invoice_pdf %}
                                <a class="text-right btn btn-warning" href="{{ invoice.invoice_pdf }}" class="href">Télécharger</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% else %}
            <div class="alert alert-primary">
                Vous n'avez aucun paiement associé à votre compte.
            </div>
        {% endif %}


    </div>

{% endblock %}
