{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-6 text-center">
                {% if user.media %}

                    <img class="avatar mb-3"
                         src="{{ vich_uploader_asset(user.media, 'imageFile', 'App\\Entity\\Media') }}"
                         alt="Avatar de {{ user.fullName }}">
                {% else %}
                    <img class="avatar mb-3"
                         src="{{ asset('images/image-user.png') }}"
                         alt="Avatar de {{ user.fullName }}">
                {% endif %}
            </div>
            <div class="col-6">
                <h1>{{ user.fullName }}</h1>
            </div>
        </div>
        {% if user is same as(app.user) %}
            <br>
            <div class="row align-items-center">
                <div class="card border-primary mb-3 mr-3 ml-3 col-4" style="max-width: 20rem;">
                    <div class="card-body text-center">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes
                            informations</a>
                        <br><br>
                        <a href="{{ path('account_profile') }}"><i class="fas fa-edit fa-4x primary-color"></i></a>
                    </div>
                </div>
                <div class="card border-primary mb-3 mr-3 ml-3 col-4" style="max-width: 20rem;">
                    <div class="card-body text-center">
                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2">Modifier mon mot de
                            passe</a>
                        <br><br>
                        <a href="{{ path('account_password') }}"><i class="fas fa-unlock fa-4x primary-color"></i></a>
                    </div>
                </div>
                <div class="card border-primary mb-3 ml-3 mr-3 col-4" style="max-width: 20rem;">
                    <div class="card-body text-center">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">GÃ©rer mes
                            abonnements</a>
                        <br><br>
                        <a href="{{ path('account_profile') }}"><i class="fas fa-cogs fa-4x primary-color"></i></a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
