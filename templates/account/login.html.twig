{% extends 'base.html.twig' %}

{% block title %}Connexion au site!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez vous</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue, le nom/mot de passe est invalide</div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ username }}" name="email" id="inputEmail" class="form-control"
                                   placeholder="Email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   placeholder="Password" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button>
                        </div>
                    </form>
                    <div>
                        <a  href="{{ path('app_forgotten_password') }}">Mot de passe oubli√© ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
